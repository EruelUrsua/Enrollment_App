@model Student


<h3>Create a New Student </h3>


<form asp-controller="Student" asp-action="Add" method="post">
    <label asp-for="Lastname"></label>
    <input type="text" asp-for="Lastname" class="form-control" />
   <br />
   <label asp-for="Firstname"></label>
   <input type="text" asp-for="Firstname" class="form-control" />
   <br />

    <a asp-controller="Student" asp-action="Index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" value="Add Student" class="btn btn-success" />

</form>


