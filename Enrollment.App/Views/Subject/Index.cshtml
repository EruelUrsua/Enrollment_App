@model List<SubjectVM>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    Back to Home Page
</a>

<a asp-controller="Subject" asp-action="Add" class="btn btn-success">
    Create New Subject
</a>
<br />
<br />
@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        No Subject Records Found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>I.D.</th>
                <th>Course Code</th>
                <th>Description</th>
                <th>Units</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Code</td>
                    <td>@item.Description</td>
                    <td>@item.Units</td>
                    <td>
                        <a asp-controller="Subject" asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-info btn-sm">
                            Edit
                        </a>
                        <button class="btn btn-danger btn-sm deleteBtn" data-id="@item.Id">
                            Delete
                        </button>
                    </td>
                </tr>

            }
        </tbody>
    </table>

    <form id="DeleteForm" asp-controller="Subject" asp-action="Delete" method="post">
        <input type="hidden" id="HiddenSubjectId" name="Id" value="" />
    </form>

}

@section Scripts {
    <script>
        $('.deleteBtn').click(function(e) {
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to delete this record?",
                icon: "warning",
                buttons: true,
                dangerMode: true

            }).then((confirm) =>{
                if (confirm) {
                    var btn = $(this);
                    var id = btn.data("id");
                    $("#HiddenSubjectId").val(id);
                    $("#DeleteForm").submit();
                    }
            });
        });
    </script>

}


