@model List<TeacherVM>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    Back to Home Page
</a>

<a asp-controller="Teacher" asp-action="Add" class="btn btn-success">
    Create New Teacher    
</a>
<br /><br />
@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        No Teacher Records Found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>I.D.</th>
                <th>Last name</th>
                <th>First name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Lastname</td>
                    <td>@item.Firstname</td>
                    <td>
                        <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-info btn-sm">
                        Edit
                    </a>
                        <button class="btn btn-danger btn-sm deleteBtn" data-id="@item.Id">
                            Delete
                        </button>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>

<form id="DeleteForm" asp-controller="Teacher" asp-action="Delete" method="post">
    <input type="hidden" id="HiddenTeacherId" name="Id" value="" />
</form>

}


@section Scripts {
    <script>
        $('.deleteBtn').click(function(e) {
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to delete this record?",
                icon: "warning",
                buttons: true,
                dangerMode: true

            }).then((confirm) =>{ 
                if (confirm) {
                    var btn = $(this);
                    var id = btn.data("id");
                    $("#HiddenTeacherId").val(id);
                    $("#DeleteForm").submit();
                    }
            });
        });
    </script>

}

